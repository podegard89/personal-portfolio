---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a  href={href}>
		<h2>
			<span>{title}</span>
			<!-- <span>&nbsp;&#128073;</span> -->
		</h2>
		<p set:html={body}>
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		max-width: calc(33.33% - 20px);
		flex-grow: 1;
		flex-basis: calc(33.33% - 20px);
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent)), rgba(var(--accent-light)));
		background-size: 200% 100%; /* Set initial background size for gradient */
		background-position: 100% 0; /* Set initial background position to start from the right */
		border-radius: 8px;
		text-align: center;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1rem);
		border-radius: 8px;
		color: white;
		/* background-color: rgba(var(--accent) 33%); */
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s ;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		/* transition: background 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
		background-position: 0 0;
		background: linear-gradient(rgba(var(--accent-light)), rgba(var(--accent-light)));
	}
	/* .link-card:is(:hover, :focus-within) h2 {
		color: linear-gradient(rgba(var(--accent-light)), rgba(var(--accent-light)));
	} */
	/* .line-container {
		white-space: nowrap;
	} */
	.line {
		overflow: hidden;
		white-space: nowrap;
	}
</style>
