---
import Navbar from '../components/Navbar';
interface Props {
	title: string;
}

const { title } = Astro.props;

const allNavItems = await Astro.glob('../content/nav-items/*.md');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<Navbar allNavItems={allNavItems} client:load/>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	/* VulfMono family */
	@font-face {
		font-family: 'VulfMonoDemo';
		src: url('/fonts/VulfMonoDemo-Regular.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'VulfMonoDemo';
		src: url('/fonts/VulfMonoDemo-Light.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'VulfMonoDemo';
		src: url('/fonts/VulfMonoDemo-Bold.otf') format('opentype');
		font-weight: bold;
		font-style: bold;
		font-display: swap;
	}

	@font-face {
		font-family: 'VulfMonoDemo';
		src: url('/fonts/VulfMonoDemo-Italic.otf') format('opentype');
		font-weight: normal;
		font-style: italic;
		font-display: swap;
	}

	@font-face {
		font-family: 'VulfMonoDemo';
		src: url('/fonts/VulfMonoDemo-Italic.otf') format('opentype');
		font-weight: normal;
		font-style: italic;
		font-display: swap;
	}

	/* VulfMonoBlack family */
	@font-face {
		font-family: 'VulfMonoBlackDemo';
		src: url('/fonts/VulfMonoDemo-Black.otf') format('opentype');
		font-weight: bold;
		font-style: bold;
		font-display: swap;
	}

	/* VulfSans family */
	@font-face {
		font-family: 'VulfSansDemo';
		src: url('/fonts/VulfSansDemo-Regular.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'VulfSansDemo';
		src: url('/fonts/VulfSansDemo-Light.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'VulfSansDemo';
		src: url('/fonts/VulfSansDemo-Bold.otf') format('opentype');
		font-weight: bold;
		font-style: bold;
		font-display: swap;
	}
	@font-face {
		font-family: 'VulfSansDemo';
		src: url('/fonts/VulfSansDemo-Italic.otf') format('opentype');
		font-weight: normal;
		font-style: italic;
		font-display: swap;
	}

	:root {
  		--accent: 204, 133, 0;
		--accent-light: 219, 94, 114; 
		/* --accent-dark: 49, 10, 101; */
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
  		);
	}
	html {
		font-family: 'VulfMonoDemo', sans-serif;
		background: #008080;
		background-size: 224px;
	}

	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>