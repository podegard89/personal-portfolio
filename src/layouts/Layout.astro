</script>

<html lang="en" transition:animate={"none"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pearce Odegard" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="icon"
      href="https://www.canva.com/design/DAFyfn0GgMI/ValEl7W4AwCD2Grw3EQbBg/view?utm_content=DAFyfn0GgMI&utm_campaign=designshare&utm_medium=link&utm_source=editor"
    />
    <ViewTransitions />
  </head>

  <body>
    <header id="header" class="page-link" transition:animate={"none"}>
      <h1 class="main-header">
        <span class="text-gradient">Pearce<br />Odegard</span>
      </h1>
      <Navbar allNavItems={allNavItems} path={Astro.url.pathname} />
    </header>
    <div class="main-sidebar page-link">
      <Sidebar items={sidebarItems} client:only />
      <main transition:animate={"slide"}>
        <slot />
      </main>
      <div class="spacer"></div>
    </div>
    <footer id="footer" class="page-link">
      <p class="copy">&copy; {new Date().getFullYear()} Pearce Odegard</p>
      <span class="footer-separator">&bull;</span>

      <p>
        <span class="global-p-a-style-override"
          ><a href="/legal/privacy-policy">Privacy Policy</a></span
        >
      </p>
      <span class="footer-separator">&bull;</span>
      <p>
        <span class="global-p-a-style-override"
          ><a href="/contact">Contact Me</a></span
        >
      </p>
      <span class="footer-separator">&bull;</span>
      <div class="social-links">
        <a href="https://github.com/podegard89" class="github">
          <Image class="social-icon" src={gitHubMark} alt="GitHub Icon" />
        </a>
        <a href="https://www.linkedin.com/in/pearce-odegard/" class="linkedIn">
          <Image class="social-icon" src={linkedInIcon} alt="LinkedIn Icon" />
        </a>
      </div>
    </footer>

    <style is:global>
      /* VulfMono family */
      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Regular.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Light.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Bold.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      /* VulfMonoBlack family */
      @font-face {
        font-family: "VulfMonoBlackDemo";
        src: url("/fonts/VulfMonoDemo-Black.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }

      /* VulfSans family */
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Regular.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Light.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Bold.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      :global(p > a) {
        text-decoration: none;
        color: #333;
        position: relative; /* Needed for the underline animation */
        border-bottom: 2px solid transparent; /* Transparent border by default */
        transition:
          color 0.3s,
          border-color 0.3s; /* Add smooth transitions */
        font-weight: bold;
      }
      :global(p > a:hover) {
        color: rgb(var(--accent));
        border-bottom-color: rgb(var(--accent));
      }

      /* ::-webkit-scrollbar {
        width: 1.2em;
      }

      ::-webkit-scrollbar-track {
        background: rgb(var(--accent-light));
      }

      ::-webkit-scrollbar-thumb {
        background: #ffffff;
        border: 0.25em solid rgb(var(--accent-light));
        border-radius: 1em;
      }

