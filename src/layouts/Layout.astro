---
import { ViewTransitions, slide } from "astro:transitions";
import Navbar from "../components/Navbar";
interface Props {
  title: string;
  subHeading: string;
}

const { title, subHeading } = Astro.props;

const allNavItems = await Astro.glob("../content/nav-items/*.md");

const slideAnim = slide({ duration: "0.5s" });
console.log(slideAnim.forwards.old);
console.log(slideAnim.forwards.new);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pearce Odegard" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <h1><span class="text-gradient">Pearce Odegard</span></h1>
    <!-- <h2 transition:animate={slide({ duration: "0.5s" })}>{subHeading}</h2> -->

    <Navbar allNavItems={allNavItems} client:load />

    <main transition:animate={slide({ duration: "0.5s" })}>
      <slot />
    </main>
    <style is:global>
      /* VulfMono family */
      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Regular.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Light.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Bold.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      @font-face {
        font-family: "VulfMonoDemo";
        src: url("/fonts/VulfMonoDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      /* VulfMonoBlack family */
      @font-face {
        font-family: "VulfMonoBlackDemo";
        src: url("/fonts/VulfMonoDemo-Black.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }

      /* VulfSans family */
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Regular.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Light.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Bold.otf") format("opentype");
        font-weight: bold;
        font-style: bold;
        font-display: swap;
      }
      @font-face {
        font-family: "VulfSansDemo";
        src: url("/fonts/VulfSansDemo-Italic.otf") format("opentype");
        font-weight: normal;
        font-style: italic;
        font-display: swap;
      }

      ::-webkit-scrollbar {
        width: 1.5em;
      }

      ::-webkit-scrollbar-track {
        background: rgb(var(--accent-light));
      }

      ::-webkit-scrollbar-thumb {
        background: #ffffff;
        border: 0.25em solid rgb(var(--accent-light));
        border-radius: 1em;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #333;
      }

      :root {
        --accent: 204, 133, 0;
        --accent-light: 219, 94, 114;
        /* --accent-dark: 49, 10, 101; */
        --accent-gradient: linear-gradient(
          to bottom,
          rgb(var(--accent-light)) 33%,
          rgb(var(--accent))
        );
        --accent-gradient-reverse: linear-gradient(
          to top,
          rgb(var(--accent-light)),
          rgb(var(--accent))
        );
      }
      html {
        font-family: "VulfMonoDemo", sans-serif;
        background: #008080;
        background-size: 224px;
        overflow-y: scroll;
      }

      main {
        margin: auto;
        padding: 1rem;
        width: 1200px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        font-family: "VulfMonoBlackDemo", sans-serif;
      }
      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
      h2 {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1;
        font-family: "VulfSansDemo", sans-serif;
        text-align: center;
        color: white;
      }
    </style>
  </body>
</html>
