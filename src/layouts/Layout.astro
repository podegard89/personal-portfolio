      :root {
        --accent: 204, 133, 0;
        --accent-alt: 255, 165, 0;
        --accent-light: 219, 94, 114;
        /* --accent-dark: 49, 10, 101; */
        --accent-gradient: linear-gradient(
          to bottom,
          rgb(var(--accent-light)) 33%,
          rgb(var(--accent))
        );
        --accent-gradient-reverse: linear-gradient(
          to top,
          rgb(var(--accent-light)),
          rgb(var(--accent))
        );
      }

      html {
        font-family: "VulfMonoDemo", sans-serif;
        background: #008080;
        background-size: 224px;
        overflow-y: scroll;
        overflow-x: hidden;
        scroll-padding-top: 200px;
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        position: sticky;
        top: 0;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        flex-wrap: wrap;
        margin: 0;
        padding-bottom: 1em;
        padding-top: 1em;
        background-color: #008080;
        z-index: 100;
        box-shadow:
          rgba(0, 0, 0, 0.09) 0px 2px 1px,
          rgba(0, 0, 0, 0.09) 0px 4px 2px,
          rgba(0, 0, 0, 0.09) 0px 8px 4px,
          rgba(0, 0, 0, 0.09) 0px 16px 8px,
          rgba(0, 0, 0, 0.09) 0px 32px 16px;
      }

      /* this is for spacing the main content in the center, offsetting the width of the page contents sidebar */
      .spacer {
        width: 15%;
      }

      @media (max-width: 1400px) {
        .spacer {
          display: none;
        }
      }

      footer {
        font-family: "VulfSansDemo", "sans-serif";
        background-color: #333;
        color: #fff;
        text-align: center;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top: auto;
        gap: 1em;
        margin-bottom: 0;
        padding: 0.5em;
        border: none !important;
        font-weight: normal !important;
        z-index: 100;
      }

      @media (max-width: 768px) {
        footer {
          flex-direction: column;
          gap: 0.5em;
          line-height: 1;
        }

        .footer-separator {
          display: none;
        }
      }

      .copy {
        font-style: italic;
      }

      footer > p > span > a {
        color: #fff;
        text-decoration: none;
      }

      footer > p > span > a:hover {
        color: rgb(var(--accent-light));
      }

      .social-links {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        flex-wrap: wrap;
        gap: 1em;
      }

      .social-icon {
        width: 2em;
        height: 2em;
        display: block;
        background-color: #fff;
        padding: 0.5em;
        border-radius: 0.8em;
      }

      .social-icon:is(:hover, :focus) {
        transform: scale(1.1);
      }

      main {
        margin: auto;
        width: 1200px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
      }

      .main-sidebar {
        display: flex;
        flex-direction: row;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .main-header {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        font-family: "VulfMonoBlackDemo", sans-serif;

        display: none;
      }
      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
      h2 {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1;
        font-family: "VulfSansDemo", sans-serif;
        text-align: center;
        color: white;
      }
    </style>
  </body>
</html>
