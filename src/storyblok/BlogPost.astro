---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
import { Image } from "astro:assets";
const { blok } = Astro.props;
const content = renderRichText(blok.content);
---

<article class="post-container" {...storyblokEditable(blok)}>
  <Image
    width={800}
    height={500}
    src={`${blok.image.filename}/m/1600x0`}
    alt={blok.title}
    class="cover-image"
  />
  <h1>{blok.title}</h1>
  <div class="main-post-content">
    <Fragment set:html={content} />
  </div>
</article>

<style>
  :root {
    --font-size-card-h1: clamp(1.5rem, 5vw, 3rem);
    --font-size-content: clamp(1rem, 1vw, 1.5rem);
  }

  h1 {
    font-family: "VulfSansDemo", sans-serif;
    font-size: var(--font-size-card-h1);
    margin-top: 1rem;
    margin-bottom: 1rem;
    /* line-height: 1; */
    color: rgb(var(--accent-alt));
  }

  .cover-image {
    max-width: 50%;
    height: auto;
    border-radius: 0.7rem;
  }

  .post-container {
    font-family: "VulfSansDemo", sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* margin-top: 2rem; */
  }

  .main-post-content {
    text-align: left;
    width: 90%;
    background-color: white;
    padding: 3%;
    border-radius: 1em;
    font-size: var(--font-size-content);
  }

  @media (max-width: 800px) {
  }
</style>
